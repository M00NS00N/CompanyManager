@model CompanyManager.Models.CreateNodeViewModel

@{
    ViewBag.Title = "Именить";
}

<h2>Изменить</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Запись</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Node.Id)


        <div class="form-group">
            @Html.Label("Продукт", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Node.MainProductId, new SelectList(Model.Products,
                    "ProductId", "ProductName", Model.Node.MainProductId), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Node.MainProductId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Что", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Node.InitialProductId, new SelectList(Model.Products,
                    "ProductId", "ProductName", Model.Node.InitialProductId), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Node.InitialProductId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Куда", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Node.DestinationProductId, new SelectList(Model.Products,
                    "ProductId", "ProductName", Model.Node.DestinationProductId), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Node.DestinationProductId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Количество", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Node.Count, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Node.Count, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Обратно к списку", "Index")
</div>
