@model IEnumerable<CompanyManager.DatabaseAccessLayer.Context.MeasureUnit>

@{
    ViewBag.Title = "Справочник единиц измерения";
}

<h2>Справочник единиц измерения</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MeasureUnitFullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MeasureUnitShortName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MeasureUnitFullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MeasureUnitShortName)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
