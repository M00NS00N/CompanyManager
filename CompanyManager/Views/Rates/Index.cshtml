@model IEnumerable<CompanyManager.DatabaseAccessLayer.Context.Rate>

@{
    ViewBag.Title = "Справочник норм";
}

@Scripts.Render("~/bundles/jquery")
<script type="text/javascript">
    function toggleContains(value, tdClass) {
        $("tr>td." + tdClass + ":not(:contains('" + value + "'))").parent().hide();
    }
    $(document).ready(function () {
        $("#productCode,#materialCode").on("input paste", function () {
            var value1 = $("#productCode").val();
            var value2 = $("#materialCode").val();
            $("tr").show();
            toggleContains(value1, "pc");
            toggleContains(value2, "mc");
        });
    });

</script>

<h2>Справочник норм</h2>

<div class="row">
    <div class="col-md-4">
        <p>
            @Html.ActionLink("Добавить", "Create")
        </p>
    </div>
    <div class="col-md-1">
        @Html.DisplayNameFor(model => model.Material.Code)
    </div>
    <div class="col-md-2">
        @Html.TextBox("materialCode", null, new { @id = "materialCode" })
    </div>
    <div class="col-md-3">
        @Html.DisplayNameFor(model => model.Product.ProductCode)
    </div>
    <div class="col-md-1 ">
        @Html.TextBox("productCode", null, new { @id = "productCode" })
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Material.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConsumptionRate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WasteRate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="mc">
            @Html.DisplayFor(modelItem => item.Material.Code)
        </td>
        <td class="pc">
            @Html.DisplayFor(modelItem => item.Product.ProductCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConsumptionRate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WasteRate)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
